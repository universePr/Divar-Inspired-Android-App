<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/padding_default"
    android:layout_marginBottom="@dimen/margin_default"
    style="@style/Layouts"
    >
    <RelativeLayout
        android:id="@+id/ad_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Layouts"
        android:layout_margin="@dimen/margin_default">

        <TextView
            android:id="@+id/ad_title"
            style="@style/Texts.TextViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/img_frame"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_default"
            android:textAlignment="textStart"
            />
        <TextView
            android:id="@+id/ad_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/Texts.textViews"
            android:layout_below="@id/ad_title"
            android:layout_toStartOf="@id/img_frame"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/m42"
            android:padding="@dimen/padding_default"
            />
        <TextView
            android:id="@+id/ad_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Texts.textViews"
            android:layout_toStartOf="@id/img_frame"
            android:layout_below="@id/ad_price"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/m42"
            android:padding="@dimen/padding_default"
            android:textAlignment="textStart"
            />
        <LinearLayout
            android:id="@+id/translate_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_below="@id/ad_time"
            android:layout_marginTop="@dimen/m16"
            android:background="@drawable/bg_gray_button"
            android:padding="8dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/img_tr"
                style="@style/ImageButtons"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_translate"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_translate"
                android:textSize="@dimen/f14"
                android:layout_marginStart="@dimen/m4"
                android:layout_gravity="center"
                style="@style/Texts"
                />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/lang_progress"
            style="@style/Texts.TextViews"
            android:layout_width="@dimen/s28"
            android:layout_height="@dimen/s28"
            android:layout_below="@+id/ad_time"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/translate_section"
            android:visibility="invisible" />
        <androidx.cardview.widget.CardView
            android:id="@+id/img_frame"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_rounde"

            >
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_no_picture"
            android:scaleType="centerCrop"
            />
        </androidx.cardview.widget.CardView>
        <ImageView
            android:id="@+id/chat_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_chat"
            android:scaleType="fitCenter"
            style="@style/ImageButtons"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_toStartOf="@id/img_frame"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_below="@id/ad_price"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>