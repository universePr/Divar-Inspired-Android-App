<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    style="@style/Layouts">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/titel"
        android:padding="@dimen/padding_default">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contacts"
            style="@style/Texts.TextViews"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/padding_default"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/call"
        android:padding="@dimen/padding_default">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon_call"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_call"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/txt_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_call_to"
                style="@style/Texts.TextViews"
                android:layout_toEndOf="@id/icon_call"
                android:layout_gravity="center_vertical"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/txt_call_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                style="@style/Texts.TextViews"
                android:layout_toEndOf="@id/txt_call"
                android:layout_gravity="center_vertical"
                android:padding="8dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/msg"
        android:padding="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon_msg"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_send"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/txt_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_sms_to"
                style="@style/Texts.TextViews"
                android:layout_toEndOf="@id/icon_msg"
                android:layout_gravity="center_vertical"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/txt_msg_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                style="@style/Texts.TextViews"
                android:layout_toEndOf="@id/txt_msg"
                android:layout_gravity="center_vertical"
                android:padding="8dp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>